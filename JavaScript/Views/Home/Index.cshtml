@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="jumbotron">
        <h1>Active Query Builder ASP.NET Edition</h1>
        <p class="lead">ASP.NET Core JavaScript client-side rendering demo</p>
        <p><a href="https://www.activequerybuilder.com/" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h3>Simple client rendering</h3>
            <p></p>
            <p>
                <a class="btn btn-default" href="@Url.Action("Index", "SimpleClientRendering")">Run &raquo;</a>
            </p>
        </div>
        <div class="col-md-4">
            <span class="label label-info" style="float: right;">JqueryUI</span>
            <h3>Display Query Results</h3>
            <p>Displaying SQL query results and modifying SQL queries while browsing the data.</p>
            <p>
                <a class="btn btn-default" href="@Url.Action("Index", "QueryResultsDemo")">Run &raquo;</a>
            </p>
        </div>
        <div class="col-md-4">
            <h3>Create QueryBuilder via HTTP request</h3>
            <p></p>
            <p>
                <a class="btn btn-default" href="@Url.Action("Index", "CreateQueryBuilder")">Run &raquo;</a>
            </p>
        </div>
        <div class="col-md-4">
            <h3>Configure the component via JSON</h3>
            <p>`ActiveQueryBuilder.json` JSON configuration</p>
            <p>
                <a class="btn btn-default" href="@Url.Action("Index", "CreateFromConfig")">Run &raquo;</a>
            </p>
        </div>
        //CUT:STD{{
        <div class="col-md-4">
            <span class="label label-danger" style="float: right;">Pro</span>
            <h3>Open Query Builder in a modal window</h3>
            <p></p>
            <p>
                <a class="btn btn-default" href="@Url.Action("Index", "DoubleClientRendering")">Run &raquo;</a>
            </p>
        </div>
        //}}CUT:STD

        <div class="col-md-4">
            <h3>Change Connection Demo</h3>
            <p></p>
            <p>
                <a class="btn btn-default" href="@Url.Action("Index", "ChangeConnection")">Run &raquo;</a>
            </p>
        </div>

        <div class="col-md-4">
            <h3>Webpack Demo</h3>
            <p>Read the `Readme.md` in the 'Scripts\Webpack' folder.</p>
            <p>
                <a class="btn btn-default" href="@Url.Action("Index", "WebpackClientRendering")">Run &raquo;</a>
            </p>
        </div>
        <div class="col-md-4">
            <h3>React Demo</h3>
            <p>Read the `Readme.md` in the 'Scripts\React' folder.</p>
            <p>
                <a class="btn btn-default" href="@Url.Action("Index", "ReactClientRendering")">Run &raquo;</a>
            </p>
        </div>
        <div class="col-md-4">
            <h3>AngularJS Demo</h3>
            <p></p>
            <p>
                <a class="btn btn-default" href="@Url.Action("Index", "AngularJSClientRendering")">Run &raquo;</a>
            </p>
        </div>
        <div class="col-md-4">
            <h3>Angular Demo</h3>
            <p>Read the `Readme.md` in the 'Scripts\Angular' folder.</p>
            <p>
                <a class="btn btn-default" href="@Url.Action("Index", "AngularClientRendering")">Run &raquo;</a>
            </p>
        </div>
        <div class="col-md-4">
            <h3>Custom HTML Layout Definition</h3>
            <p>Applying alternate (mobile-friendly) HTML layout instead of the predefined embedded layout.</p>
            <p>
                <a class="btn btn-default" href="@Url.Action("Index", "MobileDemo")">Run &raquo;</a>
            </p>
        </div>
    </div>
</div>

